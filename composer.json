{
    "repositories": [
        {
            "type": "git",
            "url": "git@github.com:channelgrabber/ZendPdf.git"
        },
        {
            "url": "https://composer.build.channelgrabber.com",
            "type": "composer"
        },
        {
            "type": "composer",
            "url": "http://packages.zendframework.com"
        }
    ],
    "autoload": {
        "psr-0": {
            "": "library/"
        }
    },
    "require": {
        "channelgrabber/account": "~1.0.17",
        "channelgrabber/amazon": "~1.2.7",
        "channelgrabber/channel": "~1.1.5",
        "channelgrabber/constants": "dev-master",
        "channelgrabber/ebay": "~1.1.14",
        "channelgrabber/gearman": "~1.0.11",
        "channelgrabber/http": "~1.2.12",
        "channelgrabber/log": "~1.5.1",
        "channelgrabber/order": "~1.5.31",
        "channelgrabber/permission": "~1.0.1",
        "channelgrabber/phinx": "~0.3.2.3",
        "channelgrabber/redis": "~0.1.0",
        "channelgrabber/sso": "~1.1.2",
        "channelgrabber/stdlib": "~2.6.0",
        "channelgrabber/template": "~1.2.9",
        "channelgrabber/user": "~1.14.3",
        "channelgrabber/userpreference": "~1.1.0",
        "channelgrabber/zf2-amazon": "~1.0.0",
        "channelgrabber/zf2-ebay": "~1.0.0",
        "channelgrabber/zf2-email-template": "~1.0.1",
        "channelgrabber/zf2-hal": "~1.0.4",
        "channelgrabber/zf2-installer": "~1.0.2",
        "channelgrabber/zf2-logclient": "~1.3.0",
        "channelgrabber/zf2-login": "~1.4.0",
        "channelgrabber/zf2-permission": "~1.0.2",
        "channelgrabber/zf2-register": "~1.4.13",
        "channelgrabber/zf2-ssoclient": "~1.2.4",
        "channelgrabber/zf2-stdlib": "~1.1.9",
        "channelgrabber/zf2-v4-ui": "~1.9.4",
        "guzzle/guzzle": "~3.7",
        "nocarrier/hal": "~0.9.3",
        "php": ">=5.3.3",
        "widmogrod/zf2-mustache-module": "dev-master",
        "zendframework/zendframework": "2.3.*"
    },
    "require-dev": {
        "codeception/codeception": "1.6.5",
        "phpspec/phpspec": "2.0.*@dev",
        "phpspec/prophecy": "~1.0",
        "channelgrabber/codeception": "1.0.*"
    },
    "scripts": {
        "post-install-cmd": [
            "composer -o dump-autoload",
            "php vendor/zendframework/zendframework/bin/classmap_generator.php -l module -o config/di/modules_classmap.php --overwrite",
            "php bin/update_di_components.php",
            "php -d memory_limit=512M bin/compile_di.php",
            "compass compile vendor/channelgrabber/zf2-v4-ui",
            "compass compile public/channelgrabber/settings"
        ],
        "post-update-cmd": [
            "composer -o dump-autoload",
            "php vendor/zendframework/zendframework/bin/classmap_generator.php -l module -o config/di/modules_classmap.php --overwrite",
            "php bin/update_di_components.php",
            "php -d memory_limit=512M bin/compile_di.php",
            "compass compile vendor/channelgrabber/zf2-v4-ui",
            "compass compile public/channelgrabber/settings"
        ]
    }
}