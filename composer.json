{
    "repositories": [
        {
            "url": "https://composer.build.channelgrabber.com",
            "type": "composer",
            "options": {
                "ssl": {
                    "local_cert": "composer.pem"
                }
            }
        },
        {
            "type": "composer",
            "url": "http://packages.zendframework.com"
        },
        {
            "url": "git@bitbucket.org:channelgrabber/cg-order.git",
            "type": "git"
        }
    ],
    "autoload": {
        "psr-0": {
            "": "library/"
        }
    },
    "require": {
        "channelgrabber/codeception": "1.0.*",
        "channelgrabber/constants": "dev-master",
        "channelgrabber/http": "~1.2.3",
        "channelgrabber/order": "dev-CGIV-1283 as 1.1.2",
        "channelgrabber/redis": "dev-CGIV-529",
        "channelgrabber/slim": "1.6.2 as 1.5.6",
        "channelgrabber/sso": "~1.1.2",
        "channelgrabber/stdlib": "~2.4.0",
        "channelgrabber/ui": "~1.1.0",
        "channelgrabber/zf2-hal": "~1.0.4",
        "channelgrabber/zf2-installer": "~1.0.0",
        "channelgrabber/zf2-logclient": "~1.1.3",
        "channelgrabber/zf2-login": "~1.3.1",
        "channelgrabber/zf2-register": "~1.4.1",
        "channelgrabber/zf2-ssoclient": "~1.2.1",
        "channelgrabber/zf2-stdlib": "~1.1.2",
        "channelgrabber/zf2-v4-ui": "dev-CGIV-1237-TagsUI as 1.0.7",
        "codeception/codeception": "1.6.5",
        "davedevelopment/phpmig": "0.4",
        "guzzle/guzzle": "~3.7",
        "nocarrier/hal": "~0.9.3",
        "php": ">=5.3.3",
        "phpspec/phpspec": "2.0.*@dev",
        "phpspec/prophecy": "~1.0",
        "widmogrod/zf2-mustache-module": "dev-master",
        "zendframework/zend-config": "2.2.*",
        "zendframework/zend-db": "2.2.*",
        "zendframework/zend-di": "2.2.*",
        "zendframework/zend-servicemanager": "2.2.*",
        "zendframework/zendframework": "2.2.*"
    },
    "require-dev": {
        "codeception/codeception": "1.6.5",
        "phpspec/phpspec": "2.0.*@dev",
        "phpspec/prophecy": "~1.0",
        "channelgrabber/codeception": "1.0.*"
    },
    "scripts": {
        "post-install-cmd": [
            "composer -o dump-autoload",
            "php vendor/zendframework/zendframework/bin/classmap_generator.php -l module -o config/di/modules_classmap.php --overwrite",
            "php bin/update_di_components.php",
            "php -d memory_limit=512M bin/compile_di.php"
        ],
        "post-update-cmd": [
            "composer -o dump-autoload",
            "php vendor/zendframework/zendframework/bin/classmap_generator.php -l module -o config/di/modules_classmap.php --overwrite",
            "php bin/update_di_components.php",
            "php -d memory_limit=512M bin/compile_di.php"
        ]
    }
}