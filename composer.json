{
    "repositories": [
        {
            "url": "https://composer.build.channelgrabber.com",
            "type": "composer",
            "options": {
                "ssl": {
                    "local_cert": "composer.pem"
                }
            }
        },
        {
            "type": "composer",
            "url": "http://packages.zendframework.com"
        }
    ],
    "require": {
        "channelgrabber/cilex": "~1.1.0",
        "channelgrabber/constants": "dev-master",
        "channelgrabber/di": "~2.1.1",
        "channelgrabber/http": "~1.2.28",
        "channelgrabber/log": "~2.0.7",
        "channelgrabber/redis": "~0.1.0",
        "channelgrabber/sso": "~1.2.5",
        "channelgrabber/stdlib": "~2.7.28",
        "channelgrabber/zf2-installer": "~1.0.0",
        "channelgrabber/zf2-logclient": "~1.4.1",
        "channelgrabber/zf2-login": "~1.4.15",
        "channelgrabber/zf2-register": "~1.4.25",
        "channelgrabber/zf2-ssoclient": "~1.4.2",
        "channelgrabber/zf2-stdlib": "~1.1.17",
        "channelgrabber/zf2-v4-ui": "~1.14.8",
        "cilex/cilex": "~1.0.1",
        "composer/composer": "@dev",
        "guzzle/guzzle": "~3.7",
        "nocarrier/hal": "~0.9.3",
        "php": ">=5.3.3",
        "php-jsonpatch/php-jsonpatch": "@dev",
        "php-jsonpointer/php-jsonpointer": "@dev",
        "zendframework/zendframework": "2.3.*"
    },
    "require-dev": {
        "channelgrabber/codeception": "~1.1.42",
        "codeception/codeception": "~1.8.0",
        "phpspec/phpspec": "2.0.*@dev",
        "phpspec/prophecy": "~1.0"
    },
    "scripts": {
        "post-install-cmd": [
            "composer -o dump-autoload",
            "php vendor/zendframework/zendframework/bin/classmap_generator.php -l module -o config/di/modules_classmap.php --overwrite"
        ],
        "post-update-cmd": [
            "composer -o dump-autoload",
            "php vendor/zendframework/zendframework/bin/classmap_generator.php -l module -o config/di/modules_classmap.php --overwrite"
        ]
    }
}
