{
    "repositories": [
        {
            "type": "git",
            "url": "git@github.com:channelgrabber/ZendPdf.git"
        },
        {
            "url": "https://composer.build.channelgrabber.com",
            "type": "composer"
        }
    ],
    "require": {
        "channelgrabber/amazon": "~1.3.0",
        "channelgrabber/channel": "~1.5.2",
        "channelgrabber/constants": "dev-master",
        "channelgrabber/ebay": "~1.1.34",
        "channelgrabber/gearman": "~1.1.0",
        "channelgrabber/http": "~1.2.24",
        "channelgrabber/listing": "~1.0.4",
        "channelgrabber/log": "~2.0.2",
        "channelgrabber/order": "~1.8.6",
        "channelgrabber/permission": "~1.0.1",
        "channelgrabber/phinx": "~0.3.2.3",
        "channelgrabber/product": "~1.3.0",
        "channelgrabber/redis": "~0.1.0",
        "channelgrabber/settings": "~1.1.0",
        "channelgrabber/sso": "~1.2.0",
        "channelgrabber/stdlib": "~2.7.15",
        "channelgrabber/stock": "~1.0.7",
        "channelgrabber/template": "~1.2.21",
        "channelgrabber/usage": "~1.0.2",
        "channelgrabber/user": "~1.16.0",
        "channelgrabber/userpreference": "~1.2.0",
        "channelgrabber/zendesk": "~1.0.0",
        "channelgrabber/zf2-amazon": "~1.0.2",
        "channelgrabber/zf2-ebay": "~1.0.2",
        "channelgrabber/zf2-email-template": "~1.0.1",
        "channelgrabber/zf2-hal": "~1.0.4",
        "channelgrabber/zf2-logclient": "~1.4.0",
        "channelgrabber/zf2-login": "~1.4.11",
        "channelgrabber/zf2-mustache": "~1.0.1",
        "channelgrabber/zf2-permission": "~1.1.1",
        "channelgrabber/zf2-register": "~1.4.19.1",
        "channelgrabber/zf2-sessions": "~1.0.4",
        "channelgrabber/zf2-ssoclient": "~1.4.0",
        "channelgrabber/zf2-stdlib": "~1.1.14",
        "channelgrabber/zf2-usage": "~1.0.1",
        "channelgrabber/zf2-v4-ui": "dev-EPIC-CGIV-2884-import-listing as 1.12.39",
        "guzzle/guzzle": "~3.7",
        "nocarrier/hal": "~0.9.3",
        "php": ">=5.3.3",
        "zendframework/zendframework": "2.3.*"
    },
    "require-dev": {
        "channelgrabber/codeception": "~1.1.47",
        "codeception/codeception": "~1.8.0",
        "phpspec/phpspec": "2.0.*@dev",
        "phpspec/prophecy": "~1.0"
    },
    "scripts": {
        "post-install-cmd": [
            "composer -o dump-autoload",
            "php vendor/zendframework/zendframework/bin/classmap_generator.php -l module -o config/di/modules_classmap.php --overwrite",
            "php bin/update_di_components.php",
            "php -d memory_limit=512M bin/compile_di.php",
            "compass compile vendor/channelgrabber/zf2-v4-ui",
            "compass compile public/channelgrabber/settings"
        ],
        "post-update-cmd": [
            "composer -o dump-autoload",
            "php vendor/zendframework/zendframework/bin/classmap_generator.php -l module -o config/di/modules_classmap.php --overwrite",
            "php bin/update_di_components.php",
            "php -d memory_limit=512M bin/compile_di.php",
            "compass compile vendor/channelgrabber/zf2-v4-ui",
            "compass compile public/channelgrabber/settings"
        ]
    }
}
