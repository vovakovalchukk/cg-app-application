{
    "repositories": [
        {
            "type": "git",
            "url": "git@github.com:channelgrabber/ZendPdf.git"
        },
        {
            "url": "https://composer.build.channelgrabber.com",
            "type": "composer"
        },
        {
            "type": "git",
            "url": "git@bitbucket.org:channelgrabber/cg-picklist.git"
        }
    ],
    "require": {
        "channelgrabber/amazon": "~1.13.1",
        "channelgrabber/cache": "~2.0.6",
        "channelgrabber/channel": "~1.15.11",
        "channelgrabber/cilex": "~1.1.2",
        "channelgrabber/constants": "dev-master",
        "channelgrabber/di": "~2.1.1",
        "channelgrabber/ebay": "~1.8.26",
        "channelgrabber/ekm": "~1.4.2",
        "channelgrabber/gearman": "~1.2.0",
        "channelgrabber/http": "~1.3.6",
        "channelgrabber/intercom": "~1.0.0",
        "channelgrabber/listing": "~1.6.1",
        "channelgrabber/location": "~1.1.1",
        "channelgrabber/log": "~2.0.21",
        "channelgrabber/order": "~1.17.0",
        "channelgrabber/permission": "~1.0.1",
        "channelgrabber/phinx": "~0.3.2",
        "channelgrabber/picklist": "~1.0.1",
        "channelgrabber/predis": "~1.0.4",
        "channelgrabber/product": "~1.3.15",
        "channelgrabber/redis": "~0.1.0",
        "channelgrabber/royalmail": "~1.0.1",
        "channelgrabber/settings": "~1.3.1",
        "channelgrabber/sso": "~1.2.5",
        "channelgrabber/stats": "~1.0.0",
        "channelgrabber/stdlib": "~2.10.8",
        "channelgrabber/stock": "~1.4.6",
        "channelgrabber/template": "~1.2.46",
        "channelgrabber/usage": "~1.0.5",
        "channelgrabber/user": "~1.18.16",
        "channelgrabber/userpreference": "~1.2.2",
        "channelgrabber/validation": "~1.2.7",
        "channelgrabber/zendesk": "~1.0.0",
        "channelgrabber/zf2-amazon": "~1.0.2",
        "channelgrabber/zf2-channel": "~1.0.4",
        "channelgrabber/zf2-ebay": "~1.0.2",
        "channelgrabber/zf2-ekm": "~1.0.1",
        "channelgrabber/zf2-email-template": "~1.0.1",
        "channelgrabber/zf2-logclient": "~1.4.2",
        "channelgrabber/zf2-login": "~1.4.22",
        "channelgrabber/zf2-mustache": "~1.0.1",
        "channelgrabber/zf2-permission": "~1.1.7",
        "channelgrabber/zf2-register": "~1.4.31",
        "channelgrabber/zf2-royalmail": "~1.1.1",
        "channelgrabber/zf2-sessions": "~1.1.0",
        "channelgrabber/zf2-ssoclient": "~1.4.2",
        "channelgrabber/zf2-stdlib": "~1.1.18",
        "channelgrabber/zf2-usage": "~1.0.2",
        "channelgrabber/zf2-v4-ui": "~1.14.55",
        "cilex/cilex": "~1.0.1",
        "composer/composer": "@dev",
        "guzzle/guzzle": "~3.7",
        "nocarrier/hal": "~0.9.10",
        "php": ">=5.3.3",
        "php-jsonpatch/php-jsonpatch": "@dev",
        "php-jsonpointer/php-jsonpointer": "@dev",
        "zendframework/zendframework": "2.3.*"
    },
    "require-dev": {
        "channelgrabber/codeception": "~1.2.1",
        "codeception/codeception": "~1.8.0",
        "phpspec/phpspec": "2.0.*@dev",
        "phpspec/prophecy": "~1.0"
    },
    "scripts": {
        "post-install-cmd": [
            "composer -o dump-autoload",
            "php vendor/zendframework/zendframework/bin/classmap_generator.php -l module -o config/di/modules_classmap.php --overwrite",
            "if [ -d \"vendor/channelgrabber/zf2-v4-ui/public/css\" ]; then rm -rf vendor/channelgrabber/zf2-v4-ui/public/css/*; fi",
            "if [ -d \"public/channelgrabber/settings/css\" ]; then rm -rf public/channelgrabber/settings/css/*; fi",
            "compass compile vendor/channelgrabber/zf2-v4-ui",
            "compass compile public/channelgrabber/settings",
            "cd public-build && node r.js -o require-build.js && cd -"
        ],
        "post-update-cmd": [
            "composer -o dump-autoload",
            "php vendor/zendframework/zendframework/bin/classmap_generator.php -l module -o config/di/modules_classmap.php --overwrite",
            "if [ -d \"vendor/channelgrabber/zf2-v4-ui/public/css\" ]; then rm -rf vendor/channelgrabber/zf2-v4-ui/public/css/*; fi",
            "if [ -d \"public/channelgrabber/settings/css\" ]; then rm -rf public/channelgrabber/settings/css/*; fi",
            "compass compile vendor/channelgrabber/zf2-v4-ui",
            "compass compile public/channelgrabber/settings",
            "cd public-build && node r.js -o require-build.js && cd -"
        ]
    }
}
