{
    "repositories": [
        {
            "url": "https://composer.build.channelgrabber.com",
            "type": "composer",
            "options": {
                "ssl": {
                    "local_cert": "composer.pem"
                }
            }
        },
        {
            "type": "composer",
            "url": "http://packages.zendframework.com"
        }
    ],
    "require": {
        "zendframework/zend-config": "2.2.*",
        "zendframework/zend-servicemanager": "2.2.*",
        "zendframework/zend-db": "2.2.*",
        "zendframework/zend-di": "2.2.*",
        "channelgrabber/stdlib": "~2.5.0",
        "nocarrier/hal": "~0.9.3",
        "guzzle/guzzle": "~3.7",
        "channelgrabber/http": "~1.2.0",
        "channelgrabber/zf2-stdlib": "dev-CGIV-2973-DiOptimisation as 1.1.14"
    },
    "require-dev": {
        "codeception/codeception": "~1.8.0",
        "phpspec/phpspec": "2.0.*@dev",
        "phpspec/prophecy": "~1.0",
        "channelgrabber/codeception": "~1.1.42"
    },
    "scripts": {
        "post-install-cmd": [
            "composer -o dump-autoload",
            "php bin/update_di_components.php",
            "php -d memory_limit=512M bin/compile_di.php"
        ],
        "post-update-cmd": [
            "composer -o dump-autoload",
            "php bin/update_di_components.php",
            "php -d memory_limit=512M bin/compile_di.php"
        ]
    }
}
