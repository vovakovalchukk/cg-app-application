<?xml version="1.0" encoding="UTF-8"?>
<zend-config>
    <BRANCH>master</BRANCH>
    <NODE>app</NODE>
    <APP_NAME>app</APP_NAME>
    <HOST_NAME>app.channelgrabber.com</HOST_NAME>
    <VM_PATH>/var/www/app</VM_PATH>
    <Vagrant>
        <VM-RAM>512</VM-RAM>
        <VM-ip>192.168.33.54</VM-ip>
        <box>cg-precise64-php55</box>
    </Vagrant>
    <ROLE>app</ROLE>
    <Module>
        <Redis>
            <enabled>1</enabled>
            <Adapters>
                <reliable>1</reliable>
            </Adapters>
            <predis-predis>~0.8.3</predis-predis>
            <channelgrabber-predis>~1.0.1</channelgrabber-predis>
        </Redis>
        <GearmanClient>
            <enabled>1</enabled>
        </GearmanClient>
    </Module>
    <Environment>
        <Local>
            <node>app</node>
            <IP>192.168.33.54</IP>
            <hostname>app.channelgrabber.com.local</hostname>
        </Local>
        <Dual>
            <node>frontend</node>
            <IP>192.168.33.52</IP>
            <hostname>app.channelgrabber.com.local</hostname>
        </Dual>
    </Environment>
    <ENVIRONMENT>Dual</ENVIRONMENT>
</zend-config>
