{{> elements/buttons}}

{{#totalLabelCost}}
<div class="total-cost pull-right">
    <span class="total-cost-label">Total Cost:&nbsp;</span><span class="currency hidden">{{currencySymbol}}</span><span class="order-total-label-cost">{{value}}</span>
</div>
{{/totalLabelCost}}

{{#termsOfDelivery}}
<div class="courier-terms-of-delivery pull-right">
    <span class="courier-terms-of-delivery-label">Terms Of Delivery:</span>
    <div class="courier-terms-of-delivery-checkbox-warpper">
        <input type="checkbox" id="courier-terms-of-delivery-checkbox" class="courier-terms-of-delivery-checkbox" name="bulk-terms-of-delivery">
    </div>
</div>
{{/termsOfDelivery}}

{{#packageType}}
    <div class="courier-package-type pull-right">
        <span class="courier-package-type-label">Package Type</span>
    </div>
{{/packageType}}

{{#collectionDate}}
    <div class="courier-collection-date pull-right">
        <span class="courier-collection-date-label">Collection Date</span>
        <input type="text" class="inputbox datepicker" placeholder="DD/MM/YYYY" value="{{collectionDateDate}}" data-cgtype="Date" id="bulk-courier-collection-date-datepicker">
        <input type="hidden" value="{{collectionDateDate}}" name="bulk-courier-collection-date" id="bulk-courier-collection-date">
    </div>
{{/collectionDate}}