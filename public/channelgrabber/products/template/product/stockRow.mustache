<tr>
    <td id='available-{{productId}}-{{stockLocationId}}'>{{available}}</td>
    <td id='allocated-{{productId}}-{{stockLocationId}}'>{{allocated}}</td>
    <td>
        <div class="total-text-holder">
            {{>total}}
            <input type='hidden' id='etag-{{productId}}-{{stockLocationId}}' value='{{eTag}}'>
            <script>
                $(document).ready(function() {
                    require(['Stock/DomListener'], function(DomListener) {
                        var domListener = new DomListener();
                        domListener.init(
                            '.submit-inputbox[name="{{totalName}}"]',
                            '{{stockLocationId}}',
                            '#etag-{{productId}}-{{stockLocationId}}',
                            '#available-{{productId}}-{{stockLocationId}}',
                            '#allocated-{{productId}}-{{stockLocationId}}'
                        );
                    });
                });
            </script>
        </div>
    </td>
    {{#showStockLevel}}
    <td>
        <div class="stock-level-holder">
            {{>stockLevel}}
        </div>
    </td>
    {{/showStockLevel}}
</tr>
