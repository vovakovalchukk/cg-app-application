<tr>
    <td id='available-{{stockLocationId}}'>{{available}}</td>
    <td id='allocated-{{stockLocationId}}'>{{allocated}}</td>
    <td>
        <div class="total-text-holder">
            {{>total}}
            <input type='hidden' id='etag-{{stockLocationId}}' value='{{eTag}}'>
            <script>
                $(document).ready(function() {
                    require(['Stock/DomListener'], function(DomListener) {
                        var domListener = new DomListener();
                        domListener.init(
                            '.submit-inputbox[name="{{totalName}}"]',
                            '{{stockLocationId}}',
                            '#etag-{{stockLocationId}}',
                            '#available-{{stockLocationId}}',
                            '#allocated-{{stockLocationId}}'
                        );
                    });
                });
            </script>
        </div>
    </td>
</tr>