<div class="account-top-up {{additionalClass}}">
    {{#title}}
        <div class="heading-holder">
            <div class="header-large">{{title}}</div>
        </div>
    {{/title}}
    {{# accountBalance}}
    <div class="clearfix balance">
        <span class="heading-large">Please note that postage purchases are made with USPS and are non-refundable</span>
        <div class="status">
            <span class="heading-large">Balance: {{currencySymbol}}{{balance}}</span>
        </div>
    </div>
    <button id="topUp" name="topUp" class="button inline account-topup pull-left">Purchase {{currencySymbol}}{{topUpAmount}} credit</button>
    {{/accountBalance}}
    {{#autoTopUp}}
    <div class="top-up-holder">
        <span class="inputbox-label">Auto Top-up:</span>
        <div class="alternate-input mustache">
            <div class="enable-switch-auto-top-up">
                {{> elements/toggle.mustache}}
            </div>
        </div>
        {{/autoTopUp}}
        {{#tooltip}}
        <div class="tooltip-holder">
            <span class="fa fa-question-circle-o fa-2x" id="topupTooltip" name="topupTooltip"></span>
            {{> elements/tooltip.mustache}}
        </div>
    </div>
</div>
{{/tooltip}}
<script type="text/javascript">
    require(['/cg-built/shipstation/js/Account/Settings.js'], function(Settings)
    {
        $(document).ready(function() {
            new Settings({"accountId": {{accountId}}});
        });
        });
</script>