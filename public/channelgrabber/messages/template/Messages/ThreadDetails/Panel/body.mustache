<div class="message-section">
    <ul>
    {{#messages}}
        <li>
            <div class="message-head">
                <span class="sprite-sprite sprite-message-customer-21-red"></span>
                <div class="name-user">
                    <span class="name">{{name}}</span> - <span class="user">{{externalUsername}}</span>
                </div>
                <div class="date-time">
                    <span class="date">{{created}}</span> - ({{createdFuzzy}})
                </div>
            </div>
            <div class="message-body">
                {{{body}}}
            </div>
        </li>
    {{/messages}}
    </ul>
</div>