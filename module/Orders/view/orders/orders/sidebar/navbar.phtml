function Sidebar()
{
    this.$body = $('html, body');
    this.headerHeight = $('#fixed-header').height() + $('#sub-header').height();

    this.smoothScroll = function() {
        var that = this
        $('#section-nav-links a').click(function() {
            var href = $.attr(this, 'href');
            that.$body.animate({
                scrollTop: $( href ).offset().top - that.headerHeight
            }, 200,  function () {
                window.location.hash = href;
            });
            return false;
        });
    }
}

var sidebar = new Sidebar();
sidebar.smoothScroll();
