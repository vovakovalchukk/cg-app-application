function Sidebar()
{
    this.getBody = function() {
        return $('html, body');
    }

    this.getHeaderHeight = function() {
        return $('#fixed-header').height() + $('#sub-header').height();
    }

    this.$body = this.getBody();
    this.headerHeight = this.getHeaderHeight();


    this.smoothScroll = function(element) {
        var href = $.attr(element, 'href');
        this.$body.animate({
            scrollTop: $( href ).offset().top - this.headerHeight
        }, 200,  function () {
            window.location.hash = href;
        });
        return false;
    }
}

function OrderDetailsPage(sidebar)
{
    this.sidebar = sidebar
    $('#section-nav-links a').click(function() {sidebar.smoothScroll(this);});
}

var sidebar = new Sidebar();
var orderDetailsPage = new OrderDetailsPage(sidebar);

