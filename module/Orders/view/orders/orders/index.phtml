});

function batchFilter(batchId) {
    clearFilters();
    $('#hidden_batch_filter').val(batchId);
    $("#datatable").cgDataTable("redraw");
}

function clearFilters() {
    $("#filters input[name][type!='button']").val(undefined);
    $("#filters select[name]").val(undefined);
    $("#filters input[type=checkbox]").attr('checked', false);
    $(".custom-select .selected-content").html("Select");
}

$(document).on('click', '.batch-filter', function(e) {
    e.preventDefault();
    batchFilter($(this).attr('data-name'));
    return false;
});

